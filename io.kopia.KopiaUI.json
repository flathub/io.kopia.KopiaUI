{
    "app-id": "io.kopia.KopiaUI",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "24.08",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "24.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "kopia-ui",
    "separate-locales": false,
    "rename-desktop-file": "kopia-ui.desktop",
    "rename-icon": "kopia-ui",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--filesystem=host",
        "--filesystem=~/.var/app/",
        "--talk-name=org.kde.StatusNotifierWatcher"
    ],
    "modules": [
        {
            "name": "kopia-ui",
            "buildsystem": "simple",
            "build-commands": [
                "ar x kopia-ui_*.deb",
                "tar xf data.tar.xz",
                "cp -r usr/* opt/* /app",
                "chmod -R a-s,go+rX,go-w /app/KopiaUI",
                "sed -i 's|Exec=.*|Exec=kopia-ui %U|' /app/share/applications/kopia-ui.desktop",
                "install kopia-ui.sh /app/bin/kopia-ui",
                "install -Dm644 io.kopia.KopiaUI.appdata.xml /app/share/appdata/io.kopia.KopiaUI.appdata.xml",
                "unzip rclone-v*-linux-*.zip",
                "install rclone-v*-linux-*/rclone /app/bin/rclone"
            ],
            "cleanup": [
                "kopia-ui_*.deb",
                "control.tar.gz",
                "data.tar.xz",
                "debian-binary"
            ],
            "sources": [
                {
                    "type": "file",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/kopia/kopia/releases/download/v0.22.3/kopia-ui_0.22.3_amd64.deb",
                    "sha256": "6db8bfd964c3c90a5e15cd13a9783ee6673a458cb7200a3e9adc18268f17c434",
                    "x-checker-data": {
                        "is-main-source": true,
                        "stable-only": true,
                        "type": "json",
                        "url": "https://api.github.com/repos/kopia/kopia/releases/latest",
                        "tag-query": ".tag_name",
                        "tag-pattern": "^([d.]+)$",
                        "version-query": "$tag | sub(\"^v\"; \"\")",
                        "timestamp-query": ".published_at",
                        "url-query": ".assets[] | select(.name==\"kopia-ui_\" + $version + \"_amd64.deb\") | .browser_download_url"
                    }
                },
                {
                    "type": "file",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://github.com/kopia/kopia/releases/download/v0.22.3/kopia-ui_0.22.3_arm64.deb",
                    "sha256": "5486bbb6c5b30bb9d677f3412007ddb56c6d905bbba490869a48eef14e92fb72",
                    "x-checker-data": {
