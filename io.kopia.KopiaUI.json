{
    "app-id": "io.kopia.KopiaUI",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "24.08",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "24.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "kopia-ui",
    "separate-locales": false,
    "rename-desktop-file": "kopia-ui.desktop",
    "rename-icon": "kopia-ui",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--filesystem=host",
        "--filesystem=~/.var/app/",
        "--talk-name=org.kde.StatusNotifierWatcher"
    ],
    "modules": [
        {
            "name": "kopia-ui",
            "buildsystem": "simple",
            "build-commands": [
                "ar x kopia-ui_*.deb",
                "tar xf data.tar.xz",
                "cp -r usr/* opt/* /app",
                "chmod -R a-s,go+rX,go-w /app/KopiaUI",
                "sed -i 's|Exec=.*|Exec=kopia-ui %U|' /app/share/applications/kopia-ui.desktop",
                "install kopia-ui.sh /app/bin/kopia-ui",
                "install -Dm644 io.kopia.KopiaUI.appdata.xml /app/share/appdata/io.kopia.KopiaUI.appdata.xml",
                "unzip rclone-v*-linux-*.zip",
                "install rclone-v*-linux-*/rclone /app/bin/rclone"
            ],
            "cleanup": [
                "kopia-ui_*.deb",
                "control.tar.gz",
                "data.tar.xz",
                "debian-binary"
            ],
            "sources": [
                {
                    "type": "file",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/kopia/kopia/releases/download/v0.22.2/kopia-ui_0.22.2_amd64.deb",
                    "sha256": "a77256d547ecdf2b4b86450cd882f6c14cfc8ab9d97f2e1b638d101503e0741f",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/kopia/kopia/releases/latest",
                        "tag-query": ".tag_name",
                        "tag-pattern": "^([d.]+)$",
                        "version-query": "$tag | sub(\"^v\"; \"\")",
                        "timestamp-query": ".published_at",
                        "url-query": ".assets[] | select(.name==\"kopia-ui_\" + $version + \"_amd64.deb\") | .browser_download_url"
                    }
                },
                {
                    "type": "file",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://github.com/kopia/kopia/releases/download/v0.22.2/kopia-ui_0.22.2_arm64.deb",
                    "sha256": "3c57554cc61175bc7c036845f731bd932115d57b954d0385075c452170ff8734",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/kopia/kopia/releases/latest",
                        "tag-query": ".tag_name",
                        "tag-pattern": "^([d.]+)$",
                        "version-query": "$tag | sub(\"^v\"; \"\")",
                        "timestamp-query": ".published_at",
                        "url-query": ".assets[] | select(.name==\"kopia-ui_\" + $version + \"_arm64.deb\") | .browser_download_url"
                    }
                },
                {
                    "type": "file",
                    "path": "kopia-ui.sh"
                },
                {
                    "type": "file",
                    "path": "io.kopia.KopiaUI.appdata.xml"
                },
                {
                    "type": "file",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/rclone/rclone/releases/download/v1.72.0/rclone-v1.72.0-linux-amd64.zip",
                    "sha256": "f3757aa829828c0f3359301bea25eef4d4fd62de735c47546ee6866c5b5545e2",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/rclone/rclone/releases/latest",
                        "tag-query": ".tag_name",
                        "tag-pattern": "^([d.]+)$",
                        "version-query": "$tag | sub(\"^v\"; \"\")",
                        "timestamp-query": ".published_at",
                        "url-query": ".assets[] | select(.name==\"rclone-v\" + $version + \"-linux-amd64.zip\") | .browser_download_url"
                    }
                },
                {
                    "type": "file",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://github.com/rclone/rclone/releases/download/v1.72.0/rclone-v1.72.0-linux-arm64.zip",
                    "sha256": "c1669ef42d4ad65e3bb3f2cf0b2acf76cf0cbffefe463349a4f2244d8dbed701",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/rclone/rclone/releases/latest",
                        "tag-query": ".tag_name",
                        "tag-pattern": "^([d.]+)$",
                        "version-query": "$tag | sub(\"^v\"; \"\")",
                        "timestamp-query": ".published_at",
                        "url-query": ".assets[] | select(.name==\"rclone-v\" + $version + \"-linux-arm64.zip\") | .browser_download_url"
                    }
                }
            ]
        }
    ]
}
